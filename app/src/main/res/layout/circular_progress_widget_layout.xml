<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/darkGray"
    android:layout_gravity="center">

    <com.android.intdv.customviews.RatingView
        android:id="@+id/circularProgressBar"
        android:layout_width="@dimen/circular_widget_dimen"
        android:layout_height="@dimen/circular_widget_dimen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/txtTitle"
        style="@style/BaseTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/_18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:text="96" />
    <TextView
        android:id="@+id/txtUnit"
        style="@style/DetailsTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/txtTitle"
        app:layout_constraintTop_toTopOf="@id/txtTitle"
        android:textSize="@dimen/_8sp"
        android:layout_marginTop="@dimen/dim_standard_x2"
        android:layout_marginStart="@dimen/dim_standard_x2"
        android:textColor="@color/white"
        android:text="@string/percentage" />

</androidx.constraintlayout.widget.ConstraintLayout>