<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darkGray"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:paddingStart="@dimen/dim_standard_x20"
        android:paddingEnd="@dimen/dim_standard_x20">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_favorite_filled"/>

        <TextView
            android:id="@+id/txtScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TitleTextStyle"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_30sp"
            android:textColor="@color/colorGold"
            android:textAllCaps="true"
            android:text="@string/moviebox"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_search"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/txtPlaying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DetailsTextStyle"
        android:paddingTop="@dimen/dim_standard_x5"
        android:paddingBottom="@dimen/dim_standard_x5"
        android:paddingStart="@dimen/dim_standard_x15"
        android:paddingEnd="@dimen/dim_standard_x15"
        android:textSize="@dimen/_14sp"
        android:background="@color/darkGray1"
        android:textColor="@color/colorGold"
        android:text="@string/playing_now"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMoviePoster"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:itemCount="15"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/poster_item" />

    <TextView
        android:id="@+id/txtPopular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DetailsTextStyle"
        android:paddingTop="@dimen/dim_standard_x5"
        android:paddingBottom="@dimen/dim_standard_x5"
        android:paddingStart="@dimen/dim_standard_x15"
        android:paddingEnd="@dimen/dim_standard_x15"
        android:textSize="@dimen/_14sp"
        android:background="@color/darkGray1"
        android:textColor="@color/colorGold"
        android:text="@string/most_popular"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_weight="3.0"
        android:layout_height="0dp"
        android:orientation="vertical"
        tools:itemCount="5"
        tools:listitem="@layout/movie_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

</LinearLayout>